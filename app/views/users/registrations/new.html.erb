<div class="container" style="margin-top: 50px;">
  <h4 class="m-5"><span class="bg-light">新規会員登録</span></h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col-sm-2">名前</p>
    <div class="field col-sm-8">
      <%= f.text_field :name, autofocus: true, :size => "45*30" %>
    </div>
  </div>

  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col-sm-2">メールアドレス</p>
    <div class="field col-sm-8">
      <%= f.email_field :email, autofocus: true, :size => "45*30" %>
    </div>
  </div>

  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col-sm-2">パスワード(<%= @minimum_password_length %>字以上)</p>
    <div class="field col-sm-8">
      <%= f.password_field :password, :size => "45*30", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col-sm-2">パスワード(確認用)</p>
    <div class="field col-sm-8">
      <%= f.password_field :password_confirmation, :size => "45*30", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mt-4">
    <p class="col-sm-4"></p>
    <div class="actions col-sm-8">
      <%= f.submit "新規登録", class: "btn btn-outline-success" %>
    </div>
  </div>
  <% end %>
  <br>
  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col"><%= render "users/shared/links" %></p>
  </div>
</div>