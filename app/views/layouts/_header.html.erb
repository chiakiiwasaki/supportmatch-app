<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/"><span>SupportMatch</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <!--ユーザーがログインしている場合-->
        <% if user_signed_in? %>
          <li><%= link_to 'About', '#', class: 'nav-link' %></li>
          <li><%= link_to 'Mypage', users_my_page_path, class: 'nav-link' %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %></li>
          <li><%= link_to 'Contact', '#', class: 'nav-link' %></li>
        <!--管理者がログインしている場合  -->
        <% elsif admin_signed_in? %>
          <li><%= link_to 'About', '#', class: 'nav-link' %></li>
          <li><%= link_to 'Mypage', '#', class: 'nav-link' %></li>
          <li><%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: 'nav-link' %></li>
          <li><%= link_to 'Contact', '#', class: 'nav-link' %></li>
        <!--ユーザー・管理者いずれもログインしていない場合-->
        <% else %>
          <li><%= link_to 'About', '#', class: 'nav-link' %></li>
          <li><%= link_to 'Signup', new_user_registration_path, class: 'nav-link' %></li>
          <li><%= link_to 'Login', new_user_session_path, class: 'nav-link' %></li>
          <li><%= link_to 'Contact', '#', class: 'nav-link' %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>