<div class="belt"></div>
<div class='container'>
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top: 10px">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <p><%= alert %></p>
    </div>
  <% end %>
  <h4 class="m-4">Login by Email Address</h4>
  <div class='row'>
    <div class="col-md-1 col-lg-1"></div>
    <div class="field col-md-11 col-lg-11">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table cellpadding="10" class="rowtable">
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, :size => "45", autocomplete: "email", class: "text-form" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, :size => "45", autocomplete: "current-password", class: "text-form" %></td>
        </tr>
        <!--<tr>-->
        <!--  <td>-->
            <%# if devise_mapping.rememberable? %>
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%# end %>
        <!--  </td>-->
        <!--</tr>-->
        <tr>
          <td></td>
          <td class><%= f.submit "ログイン", class: "btn btn-outline-secondary" %></td>
          <td></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <h4 class="m-4">Login by SNS</h4>
  <div class='row'>
    <div class='col-md-2 col-lg-2'></div>
    <div class='col-md-10 col-lg-10'>
      <%= link_to image_tag("google2.png"), user_google_oauth2_omniauth_authorize_path, method: :post %><br><br>
      <div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="false"></div>
      <div id="fb-root"></div>
      <script async defer crossorigin="anonymous" src="https://connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v11.0&appId=978618102712862&autoLogAppEvents=1" nonce="Ib0FbqJk"></script>
    </div>
  </div>
  <br>
  <h4 class="m-4">Guest login</h4>
  <div class="row">
    <div class='col-md-2 col-lg-2'></div>
    <div class='col-md-10 col-lg-10'><p class="login"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %></p></div>
  </div>
</div>


