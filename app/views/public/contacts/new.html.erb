<div class='container'>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4 class="m-5">お問い合わせ</h4>
  <div class='row'>
    <div class="col-md-1 col-lg-1"></div>
    <div class="field col-md-11 col-lg-11">
      <%= form_for @contact, :url => contact_confirm_path do |f| %>
      <table cellpadding="10">
        <tr>
          <td><%= f.label :name, "名前" %></td>
          <td colspan="4"><%= f.text_field :name, autofocus: true, :size => "45" %></td>
        </tr>        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td colspan="4"><%= f.email_field :email, :size => "45" %></td>
        </tr>
        <tr>
          <td><%= f.label :message, "お問い合わせ内容" %></td>
          <td colspan="4"><%= f.text_area :message, :size => "45" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "確認", class: "btn btn-outline-primary" %></td>
          <td></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <style>
    table{
      table-layout: fixed;
      width: 80%;
      margin-top: 20px;
    }
  </style>
