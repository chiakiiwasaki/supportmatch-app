<div class="belt"></div>

<div class='container'>
  <% if @contact.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @contact.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>Contact</h4>
  <div class='row'>
    <div class="field col-md-12 col-lg-12">
      <%= form_for @contact, :url => contact_confirm_path do |f| %>
      <table cellpadding="10">
        <tr>
          <td><%= f.label :name, "名前(必須)" %></td>
          <td colspan="3"><%= f.text_field :name, autofocus: true, :size => "45", placeholder: "令和道子" %></td>
        </tr>        <tr>
          <td><%= f.label :email, "メールアドレス（必須）" %></td>
          <td colspan="3"><%= f.email_field :email, :size => "45", placeholder: "michiko@email.com" %></td>
        </tr>
        <tr>
          <td><%= f.label :message, "お問い合わせ内容(必須)" %></td>
          <td colspan="3"><%= f.text_area :message, :size => "45", placeholder: "問い合わせ内容をご記載ください" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "確認", class: "btn btn-outline-secondary" %></td>
          <td></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <style>
    table{
      table-layout: fixed;
      width: 80%;
      margin-top: 20px;
    }
  </style>
