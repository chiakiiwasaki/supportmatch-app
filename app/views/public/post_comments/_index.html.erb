<% post.post_comments.each do |post_comment| %>
  <% if post_comment.is_valid %>
    <hr>
    <% if post_comment.score <= 0.3 || bad_words.any?{ |m| post.content.include? m } %>
      <div onclick="obj=document.getElementById('open-comment').style; obj.display=(obj.display=='none')?'block':'none';" class="text-left">
        <a style="cursor:pointer;" class="btn btn-link">このコメントはセンシティブな内容を含む可能性があります。表示しますか？</a>
      </div>
      <div id="open-comment" style="display:none;clear:both;">
        <%= render 'public/post_comments/delete_btn', post_comment: post_comment %>
        <div class='row'>
      <div class='col-md-2 col-lg-2 d-flex align-items-center justify-content-center'>
        <%= attachment_image_tag post_comment.user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "post-user-img" %>
      </div>
      <div class='col-md-10 col-lg-10'>
        <span><strong><%= post_comment.user.name %></strong></span>
        <span class="date"><%= post_comment.created_at.strftime("%Y-%m-%d %H:%M")%></span>
        <p class="text"><%= post_comment.content %></p>
      </div>
</div>

      </div>
    <% else %>
      <%= render 'public/post_comments/delete_btn', post_comment: post_comment %>
      <div class='row'>
  <div class='col-md-2 col-lg-2 d-flex align-items-center justify-content-center'>
    <%= attachment_image_tag post_comment.user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "post-user-img" %>
  </div>
  <div class='col-md-10 col-lg-10'>
    <span><strong><%= post_comment.user.name %></strong></span>
    <span class="date"><%= post_comment.created_at.strftime("%Y-%m-%d %H:%M")%></span>
    <p class="text"><%= post_comment.content %></p>
  </div>
</div>

    <% end %>
  <% end %>
<% end %>