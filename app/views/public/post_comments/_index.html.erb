<% post_comments.each_with_index do |post_comment, idx| %>
  <% if post_comment.is_valid %>
    <hr>
    <% if post_comment.score <= 0.3 || bad_words.any?{ |m| post_comment.content.include? m } %>
      <div id="open_comment_<%= idx %>" class="parent">
        <a class="btn btn-link">このコメントはセンシティブな内容を含む可能性があります。表示しますか？</a>
      </div>
      <div class="hidden" id="open_comment_<%= idx %>">
        <%= render 'public/post_comments/delete_btn', post_comment: post_comment %>
        <%= render 'public/post_comments/content', post_comment: post_comment %>
      </div>
    <% else %>
      <%= render 'public/post_comments/delete_btn', post_comment: post_comment %>
      <%= render 'public/post_comments/content', post_comment: post_comment %>
    <% end %>
  <% end %>
<% end %>