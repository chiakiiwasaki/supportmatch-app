<% post.post_comments.each do |post_comment| %>
  <hr>
  <br>
  <% if post_comment.is_valid? %>
  <div class='row'>
    <div class='col-md-2 col-lg-2  d-flex align-items-center justify-content-center'><%= attachment_image_tag post_comment.user, :image, format: 'jpeg', fallback: "no_image.jpg",size:"50x50" %></div>
    <div class='col-md-8 col-lg-8'><%= post_comment.user.name %>さん<br><%= post_comment.created_at.strftime("%Y-%m-%d %H:%M") %></div>
    <% if post_comment.user == current_user %>
      <div class='col-md-2 col-lg-2 text-right'>
        <%= link_to 'Destroy Comment', post_post_comment_path(post_comment.post, post_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger destroy_post_comment_#{post_comment.id}", local: true %>
      </div>
    <% end %>
  </div>
  <br>
  <div class='row'>
    <div class='col-md-12 col-lg-12 text'><%= post_comment.content %></div>
  </div>
  <% end %>
  <br>
<% end %>