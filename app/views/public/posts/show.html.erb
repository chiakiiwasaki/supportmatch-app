<div class="belt"></div>
<div class='container'>
  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top: 10px">
      <%= alert %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
    </div>
  <% end %>
  <div class='row'>
    <div class='col-md-12 col-lg-12 text-right buttons'>
      <%= link_to '一覧へ戻る', posts_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
  <% if @post.user == current_user %>
    <br>
    <div class='row'>
      <div class='col-md-12 col-lg-12 text-right'>
        <%= link_to '投稿を削除', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-danger destroy_post_#{@post.id}", local: true %>
      </div>
    </div>
  <% end %>
  <br>
  <h5><strong><%= @post.title %></strong></h5>
  <br>
  <div class='row'>
    <div class='col-md-2 col-lg-2 d-flex align-items-center justify-content-center'>
      <%= attachment_image_tag @post.user, :image, format: 'jpeg', fallback: "no_image.jpg", class: "user-img" %>
    </div>
    <div class='col-md-10 col-lg-10'>
      <span><strong><%= @post.user.name %></strong></span>
      <span class="date"><%= @post.created_at.strftime("%Y-%m-%d %H:%M")%></span>
      <p class="text"><%= @post.content %></p>
      <div id="likes_buttons_<%= @post.id %>">
        <%= render 'public/favorites/btn', post: @post %>
      </div>
    </div>
  </div>

  <div id="post_comments">
    <%= render 'public/post_comments/index', post: @post %>
  </div>
  <br>
  <br>
  <div class='row'>
    <div class='col-md-12 col-lg-12' id="post_comments_form">
      <%= render 'public/post_comments/form', post: @post, post_comment: @post_comment %>
    </div>
  </div>
  <br>
  <% unless @post.user == current_user %>
  <div id="follow_button">
    <%#= render 'public/relationships/btn', post: @post %>
    <% if current_user.following?(@post.user) %>
      <%= link_to "Unfollow", user_relationship_path(@post.user.id), method: :delete, class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Follow", user_relationships_path(@post.user.id), method: :post, class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
  <% end %>
</div>


<style>
  h5, .text{
    overflow-wrap : break-word;
  }

   .date{
  font-size: 10px;
 }



 .user-img{
  height: 50px;
  width: 50px;
  object-fit: cover;
 }
</style>