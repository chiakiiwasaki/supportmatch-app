<div class="belt"></div>
<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
    <h4>Posts</h4>
    <div class="text-right buttons"><%= link_to '投稿する', new_post_path, class: "btn btn-outline-secondary" %></div>
    <table cellpadding="10" class='table table-hover table-inverse'>
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th colspan="2">投稿日</th>
          <th colspan="2">投稿者</th>
          <th colspan="3">タイトル</th>
          <th colspan="3">内容</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td colspan="2"><%= link_to post.created_at.strftime("%Y-%m-%d %H:%M"), post_path(post), class: "btn btn-link request_#{post.id}" %></td>
          <td colspan="2"><%= truncate(post.user.name) %></td>
          <td colspan="3"><%= truncate(post.title) %></td>
          <td colspan="3"><%= truncate(post.content) %></td>
          <td>
            <div id="likes_buttons_<%= post.id %>"><%= render 'public/favorites/btn', post: post %></div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>


<style>
  table{
    table-layout: fixed;
    width: 100%;
    margin-top: 20px;
    overflow-wrap : break-word;
  }
  tr{
    border-width: 1px 0;
    border-color: #CCCCCC;
    border-style: solid;
  }
</style>