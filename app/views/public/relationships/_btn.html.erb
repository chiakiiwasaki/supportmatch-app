<% if current_user.following?(post.user) %>
  <%= link_to "Unfollow", user_relationship_path(post.user.id), method: :delete, class: "btn btn-outline-danger", remote: true do %>
<% else %>
  <%= link_to "Follow", user_relationships_path(post.user.id), method: :post, class: "btn btn-outline-danger", remote: true %>
<% end %>