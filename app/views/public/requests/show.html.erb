<div class="belt"></div>
<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
      <h4>Request Info</h4>
      <div class='text-right buttons'><%= link_to '一覧へ戻る', requests_path, class: "btn btn-outline-secondary" %></div>
      <table cellpadding="10" class="show-request-table">
        <tr>
          <th>依頼人</th>
          <td colspan="3"><%= @request.user.name %></td>
        </tr>
        <tr>
          <th>依頼日</th>
          <td colspan="3"><%= @request.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <tr>
          <th>緊急性</th>
          <td colspan="3"><%= @request.urgency_i18n %></td>
        </tr>
        <tr>
          <th>種別</th>
          <td colspan="3"><%= @request.genre_i18n %></td>
        </tr>
        <tr>
          <th>物品名</th>
          <td colspan="3"><%= @request.item %></td>
        </tr>
        <tr>
          <th>数量</th>
          <td colspan="3"><%= @request.quantity %></td>
        </tr>
        <tr>
          <th>コメント</th>
          <td colspan="3"><%= @request.comment %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td colspan="3"><%= @request.postal_code %></td>
        </tr>
        <tr>
          <th>宛先</th>
          <td colspan="3"><%= @request.location %></td>
        </tr>
        <tr>
          <th>宛名</th>
          <td colspan="3"><%= @request.name %></td>
        </tr>        <tr>
          <th>電話番号</th>
          <td colspan="3"><%= @request.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan="3"><%= @request.email %></td>
        </tr>
      </table>
      <br>
      <% if @user.id == current_user.id %>
        <div><%= link_to '編集する', edit_request_path(@request), class: "btn btn-outline-secondary" %></div>
      <% else %>
          <% if @is_room == true %>
            <p class="user-show-room"><a href="/rooms/<%= @room_id %>" class="btn btn-outline-secondary">チャットへ</a>
          <% else %>
            <%= form_for @room do |f| %>
              <%= fields_for @entry do |e| %>
                <%= e.hidden_field :user_id, value: @user.id %>
              <% end %>
              <%= f.submit "チャットを始める", class:"btn btn-outline-secondary user-show-chat"%>
            <% end %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>


<style>
  .show-request-table{
    width: 70%;
  }
  tr{
    border-width: 1px 0;
    border-color: #CCCCCC;
    border-style: solid;
  }
</style>