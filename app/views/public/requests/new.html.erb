<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>

    <h4>新規依頼登録</h4>
    <%= form_with model: @request, local: true do |f| %>
      <table cellpadding="10">
        <tr>
          <td>緊急性（必須）</td>
          <td colspan="3">
            <span><%= f.radio_button :urgency, :high %><%= f.label :high, "高い" %></span>&emsp;&emsp;
            <span><%= f.radio_button :urgency, :middle %><%= f.label :middle, "やや高い" %></span>&emsp;&emsp;
            <span><%= f.radio_button :urgency, :low %><%= f.label :low, "低い" %></span>
          </td>
        </tr>
        <tr>
          <td>物品名（必須）</td>
          <td><%= f.text_field :item %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>数量（必須）</td>
          <td><%= f.text_field :quantity %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>コメント（任意）</td>
          <td><%= f.text_area :comment, :size=>"70" %></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td>郵便番号（ハイフンなし）（任意）</td>
          <td><%= f.text_field :postal_code, placeholder: "0000000" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>宛先（任意）</td>
          <td colspan="3"><%= f.text_field :location, :size=>"70", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
        </tr>
        <tr>
          <td>電話番号（任意）</td>
          <td><%= f.text_field :phone_number %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>メールアドレス（任意）</td>
          <td><%= f.text_field :email %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td>宛名（任意）</td>
          <td><%= f.text_field :name, placeholder: "令和道子" %></td>
          <td></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td><%= f.submit "依頼を投稿", class: "btn btn-outline-success" %></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>

<style>
  table{
    margin-top: 20px;
    width: 90%;
  }
</style>
