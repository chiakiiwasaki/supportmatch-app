<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
    <h4>依頼一覧</h4>
    <table cellpadding="10" class='table table-hover table-inverse'>
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th colspan="1">依頼日</th>
          <th>依頼者</th>
          <th>物品名</th>
          <th>数量</th>
          <th>緊急性</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |request| %>
        <tr>
          <td><%= link_to request.created_at.strftime("%Y-%m-%d %H:%M"), admins_request_path(request), class: "btn btn-link admins_request_#{request.id}" %></td>
          <td><%= request.user.name %></td>
          <td><%= request.item %></td>
          <td><%= request.quantity %></td>
          <td><%= request.urgency_i18n %></td>
          <td>
            <% if request.is_done %>
              <div style="color: green;">お届け完了</div>
            <% else %>
              <div style="color: red;">依頼中</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination"><%= paginate @requests %></div>
    </div>
  </div>
</div>


<style>
  table{
    table-layout: fixed;
    width: 100%;
    margin-top: 20px;
  }
  tr{
    border-width: 1px 0;
    border-color: #CCCCCC;
    border-style: solid;
  }
  .pagination{
    justify-content: center;
    padding-top: 10px;
  }
</style>