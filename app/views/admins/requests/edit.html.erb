<div class="belt-admin"></div>
<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
    <%= render 'error/edit_message', model: @request %>
    <h4>Edit Request</h4>
    <%= form_with model: @request, url: admins_request_path(@request), local: true do |f| %>
      <table cellpadding="10" class="rowtable">
        <tr>
          <td>緊急性</td>
          <td colspan="3">
            <span><%= f.radio_button :urgency, :high %><%= f.label :high, "高い" %></span>&emsp;&emsp;
            <span><%= f.radio_button :urgency, :middle %><%= f.label :middle, "やや高い" %></span>&emsp;&emsp;
            <span><%= f.radio_button :urgency, :low %><%= f.label :low, "低い" %></span>
          </td>
        </tr>
        <tr>
          <td>種別</td>
          <td colspan="3">
            <span><%= f.radio_button :genre, :other %><%= f.label :other, "その他" %></span>&emsp;&emsp;
            <span><%= f.radio_button :genre, :sanitary %><%= f.label :sanitary, "生理用品" %></span>&emsp;&emsp;
            <span><%= f.radio_button :genre, :cloth %><%= f.label :cloth, "下着・衣類" %></span>&emsp;&emsp;
            <span><%= f.radio_button :genre, :hygiene %><%= f.label :hygiene, "衛生用品・化粧品" %></span>&emsp;&emsp;
            <span><%= f.radio_button :genre, :child %><%= f.label :child, "子ども用品" %></span>
          </td>
        </tr>
        <tr>
          <td>物品名</td>
          <td colspan="3"><%= f.text_field :item, class: "text-form" %></td>
        </tr>
        <tr>
          <td>数量</td>
          <td colspan="3"><%= f.text_field :quantity, class: "text-form" %></td>
        </tr>
        <tr>
          <td>コメント</td>
          <td colspan="3"><%= f.text_area :comment, :size=>"70", class: "text-form" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td colspan="3"><%= f.text_field :postal_code, class: "text-form" %></td>
        </tr>
        <tr>
          <td>宛先</td>
          <td colspan="3"><%= f.text_field :location, :size=>"70", class: "text-form" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td colspan="3"><%= f.text_field :phone_number, class: "text-form" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td colspan="3"><%= f.text_field :email, class: "text-form" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td colspan="3"><%= f.text_field :name, class: "text-form" %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td colspan="3">
            <span><%= f.radio_button :is_done, :false %><%= f.label :false, "依頼中" %></span>&emsp;&emsp;
            <span><%= f.radio_button :is_done, :true %><%= f.label :true, "お届け完了" %></span>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-outline-secondary" %></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    <% end %>
    </div>
  </div>
</div>