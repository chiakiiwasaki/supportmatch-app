<div class="belt-admin"></div>
<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
    <h4><%= @user.name %>'s Requests</h4>
    <% if @requests.exists? %>
    <div class="jscroll">
    <table cellpadding="10" class='table table-hover table-inverse content rowtable-index'>
      <thead>
        <tr style="background-color: #EEEEEE;" class="tr-border">
          <th colspan="1">依頼日</th>
          <th>物品名</th>
          <th>数量</th>
          <th>緊急性</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |request| %>
        <tr class="tr-border">
          <td><%= link_to request.created_at.strftime("%Y-%m-%d %H:%M"), admins_request_path(request), class: "btn btn-link request_#{request.id}" %></td>
          <td data-title="物品名"><%= request.item %></td>
          <td data-title="数量"><%= request.quantity %></td>
          <td data-title="緊急性"><%= request.urgency_i18n %></td>
          <td>
            <% if request.is_done %>
              <div style="color: gray;">お届け完了</div>
            <% else %>
              <div>依頼中</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagination"><%= paginate @requests %></div>
    </div>
    <% else %>
      <p>依頼はありません</p>
    <% end %>
    </div>
  </div>
</div>