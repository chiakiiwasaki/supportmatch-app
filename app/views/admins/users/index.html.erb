<div class="belt-admin"></div>
<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12'>
    <h4>Users</h4>
    <table cellpadding="10" class='table table-hover table-inverse rowtable-index'>
      <thead>
        <tr style="background-color: #EEEEEE;" class="tr-border">
          <th>会員ID</th>
          <th colspan="2">名前</th>
          <th colspan="2">メールアドレス</th>
          <th>依頼数</th>
          <th>投稿数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
    　　<% @users.each do |user| %>
        <tr class="tr-border">
          <td><%= user.id %></td>
          <td colspan="2" data-title="名前"><%= link_to truncate(user.name, length:25), admins_user_path(user), class: "btn btn-link" %></td>
          <td colspan="2" data-title="メールアドレス"><%= truncate(user.email, length:25) %></td>
          <td data-title="依頼数"><%= user.requests.count %></td>
          <td data-title="投稿数"><%= user.posts.count %></td>
          <td>
            <% if user.is_valid %>
              <div>有効</div>
            <% else %>
              <div style="color: gray;">退会</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>